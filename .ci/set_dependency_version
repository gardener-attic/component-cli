#!/bin/bash

# SPDX-FileCopyrightText: 2020 SAP SE or an SAP affiliate company and Gardener contributors
#
# SPDX-License-Identifier: Apache-2.0

set -o errexit
set -o nounset
set -o pipefail

apk add --no-cache --no-progress make go

# Configure Go
export GOROOT="/usr/lib/go"
export GOPATH="/go"
export PATH="/go/bin:$PATH"

PROJECT_ROOT="$(dirname $0)/.."
cd ${PROJECT_ROOT}

image_vector_component_name="github.com/gardener/image-vector"

if [[ "$DEPENDENCY_NAME" != "$image_vector_component_name" ]]; then
  exit 0
fi

# get current version
current_image_vector_component_version=$(go list -m -mod=mod all | grep "$image_vector_component_name" | awk '{ print $2 }')

if [[ "$image_vector_component_name" == "$DEPENDENCY_VERSION" ]]; then
  exit 0
fi

go get "${image_vector_component_name}@${DEPENDENCY_VERSION}"
make revendor
