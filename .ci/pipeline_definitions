component-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor:
        snapshot_ctx_repository: gardener-public
      publish:
        dockerimages:
          component-cli:
            registry: 'gcr-readwrite'
            target: 'cli'
            image: eu.gcr.io/gardener-project/component/cli
    steps:
      verify:
        image: 'golang:1.16.7'
      build:
        image: 'golang:1.16.7'
        execute: 'build'
        output_dir: 'out'
        timeout: '5m'

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        publish:
          dockerimages:
            component-cli:
              registry: 'gcr-readwrite'
              target: 'cli'
              tag_as_latest: true
              image: eu.gcr.io/gardener-project/component/cli
      steps:
        update-release:
          execute: 'update_release.py'
          depends:
          - 'release'
          inputs:
            OUT_PATH: 'out_path'

    create_upgrade_prs:
      steps: ~
      traits:
        component_descriptor: ~
        update_component_deps:
          ignore_prerelease_versions: true
        cronjob:
          interval: '10m'
        version: ~
